<% include('layout', { body: null }) %>
<h2>Editar Contacto</h2>
<form method="POST" action="/edit/<%= contacto.id %>">
  <div class="mb-3"><input name="nombres" class="form-control" value="<%= contacto.nombres %>" required></div>
  <div class="mb-3"><input name="apellidos" class="form-control" value="<%= contacto.apellidos %>" required></div>
  <div class="mb-3"><input type="date" name="fecha_nacimiento" class="form-control" value="<%= contacto.fecha_nacimiento.toISOString().split('T')[0] %>" required></div>
  <div class="mb-3"><input name="direccion" class="form-control" value="<%= contacto.direccion %>"></div>
  <div class="mb-3"><input name="celular" class="form-control" value="<%= contacto.celular %>" maxlength="8" required></div>
  <div class="mb-3"><input name="correo" class="form-control" value="<%= contacto.correo %>"></div>
  <button type="submit" class="btn btn-primary">Actualizar</button>
</form>